<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_naviagation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:theme="@style/NavigationDrawerStyle"
        app:headerLayout="@layout/nav_header_naviagation_menu"
        app:menu="@menu/activity_naviagation_menu_drawer">
        <ImageView
            android:layout_width="wrap_content"

            android:layout_marginTop="600dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bluedot"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="55dp"
            android:text="Umbeo Tech Pvt. Ltd"
            android:fontFamily="Open sans"
            android:textColor="#2e2e3a"
            />

        <ImageButton
            android:id="@+id/cross"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="120dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/crossbutton"
            android:text="" />


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
