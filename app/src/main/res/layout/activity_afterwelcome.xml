<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7289DA"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/image5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image8" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mianactivityicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="460dp"
        android:layout_marginRight="130dp"
        android:layout_marginLeft="120dp"

        />


    <ImageView
        android:layout_width="129dp"
        android:layout_height="95dp"
        android:layout_marginBottom="80dp"
        android:layout_alignBottom="@+id/join"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iconresized" />


    <Button
        android:id="@+id/join"
        android:layout_width="210dp"
        android:layout_height="40dp"

        android:layout_above="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_more_round"
        android:backgroundTint="#ffffff"
        android:fontFamily="Open sans"
        android:text="Join a meeting"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/signin"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_above="@+id/signup"
        android:layout_alignStart="@+id/join"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_more_round"
        android:fontFamily="Open sans"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:backgroundTint="#2e2e3a"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signup"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:fontFamily="Open sans"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignStart="@+id/signin"
        android:layout_alignTop="@+id/imageView3"
        android:background="@drawable/button_more_round"
        android:backgroundTint="#2e2e3a"
        android:text="Sign Up"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#ffffff" />



</RelativeLayout>
